<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state - точно как в iOS -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/category_selected_bg" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- Default state - точно как в iOS -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/category_unselected_bg" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector> 