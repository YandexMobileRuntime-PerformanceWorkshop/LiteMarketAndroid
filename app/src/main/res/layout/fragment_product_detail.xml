<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Skeleton Container -->
    <FrameLayout
        android:id="@+id/skeletonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        
        <include layout="@layout/fragment_product_detail_skeleton" />
    </FrameLayout>
    
    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:paddingBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with back, share, favorite buttons -->
            <LinearLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/shareButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_share"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Share" />

                <ImageView
                    android:id="@+id/favoriteButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Favorite" />

            </LinearLayout>

            <!-- Product Gallery Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/white">

                <!-- Product Gallery -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/productGallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                    
                <!-- Gallery Indicators -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/galleryIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom"
                    app:tabBackground="@drawable/tab_indicator_selector"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="6dp"
                    app:tabMinWidth="6dp"
                    app:tabPaddingStart="2dp"
                    app:tabPaddingEnd="2dp"
                    app:tabPaddingTop="0dp"
                    app:tabPaddingBottom="0dp" />

                <!-- Product Features Overlay убираем - не нужны характеристики на картинке -->
                <LinearLayout
                    android:id="@+id/featuresContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 1200 Вт мощность -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/feature_background"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⚡"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="1200 Вт\nмощность"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:lineSpacingMultiplier="1.1" />

                    </LinearLayout>

                    <!-- 210 мм диаметр диска -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/feature_background"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⊕"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="210 мм\nдиаметр диска"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:lineSpacingMultiplier="1.1" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Похожие button - с тенью и больше размером -->
                <TextView
                    android:id="@+id/similarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/similar_button_background"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Похожие"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:drawableLeft="@drawable/ic_search_small"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp" />

            </FrameLayout>

            <!-- Page Indicator - точки как в iOS -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/pageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:minHeight="10dp"
                app:tabBackground="@drawable/tab_indicator_selector"
                app:tabIndicatorHeight="0dp"
                app:tabGravity="center"
                app:tabMaxWidth="6dp"
                app:tabMinWidth="6dp"
                app:tabPaddingTop="0dp"
                app:tabPaddingBottom="0dp"
                app:tabPaddingStart="2dp"
                app:tabPaddingEnd="2dp"
                app:tabRippleColor="@null" />

            <!-- Product Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- ОРИГИНАЛ badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/original_badge_background"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:text="ОРИГИНАЛ"
                    android:textColor="#FF666666"
                    android:textSize="11sp" />

                <!-- Manufacturer -->
                <TextView
                    android:id="@+id/manufacturerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Boxbot >"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Product Title -->
                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:lineSpacingMultiplier="1.2"
                    tools:text="Торцовочная пила комбинированная Boxbot CMS-1200-210CL, 1200 Вт" />

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐⭐⭐⭐⭐"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ratingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:textColor="#FFE6A800"
                        android:fontFamily="sans-serif-medium"
                        tools:text="4.3" />

                    <TextView
                        android:id="@+id/reviewsCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="#FF666666"
                        tools:text="(288)" />

                </LinearLayout>

                <!-- Price Container with Card background -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="#FFF8F8F8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Price line -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/currentPriceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:textColor="#FF4CAF50"
                                android:fontFamily="sans-serif-medium"
                                tools:text="3576 ₽" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/ic_payment_card"
                                android:scaleType="fitCenter" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/oldPriceText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#FF999999"
                                android:fontFamily="sans-serif"
                                tools:text="3612 ₽" />

                            <TextView
                                android:id="@+id/discountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textColor="#FFFF4444"
                                android:fontFamily="sans-serif-medium"
                                tools:text="1%" />

                        </LinearLayout>

                        <!-- Promo code -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/promoDiscountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:fontFamily="sans-serif-medium"
                                tools:text="-150 ₽" />

                            <TextView
                                android:id="@+id/promoCodeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:textSize="14sp"
                                android:textColor="#FF666666"
                                tools:text="WOW500\nЗаказ от 3000₽ • до 20.09" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <ImageView
                                android:id="@+id/copyPromoButton"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_copy"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Seller Info -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_store"
                            android:scaleType="fitCenter" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/sellerNameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:fontFamily="sans-serif-medium"
                                tools:text="Яндекс Фабрика" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⭐"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/sellerRatingText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:textSize="12sp"
                                    android:textColor="#FF666666"
                                    tools:text="4.5 • Отзывы оценок" />

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/sellerFavoriteButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_heart"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true" />

                        <ImageView
                            android:id="@+id/sellerDetailsButton"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Delivery Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    
                    <!-- Delivery Method Tabs -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/deliveryMethodTabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:tabMode="fixed"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/black"
                        app:tabSelectedTextColor="@color/black"
                        app:tabTextColor="#FF666666" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Доставка Маркета"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium" />

                    <!-- RadioGroup с прямыми RadioButton -->
                    <RadioGroup
                        android:id="@+id/deliveryOptionsGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Delivery Option 1 -->
                        <RadioButton
                            android:id="@+id/deliveryOption1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:checked="true"
                            android:buttonTint="#FF2196F3"
                            android:paddingVertical="8dp"
                            android:text="Завтра\nпо клику, 299 ₽ • Москва курьером в удобное время"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif" />

                        <!-- Delivery Option 2 -->
                        <RadioButton
                            android:id="@+id/deliveryOption2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:buttonTint="#FF2196F3"
                            android:paddingVertical="8dp"
                            android:text="Завтра\nпункт выдачи, 0 ₽ • Москва"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

                    <!-- Bottom Action Buttons - зафиксированы внизу с отступом от навигации -->
    <LinearLayout
        android:id="@+id/actionButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:elevation="8dp">
        
        <!-- Payment Method Button -->
        <Button
            android:id="@+id/paymentMethodButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Способ оплаты"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/addToCartButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="В корзину"
            android:textColor="#FF333333"
            android:textAllCaps="false"
            android:background="@drawable/button_ripple_gray"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/buyNowButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Купить сейчас"
            android:textColor="#FF333333"
            android:textAllCaps="false"
            android:background="@drawable/button_ripple_yellow"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 